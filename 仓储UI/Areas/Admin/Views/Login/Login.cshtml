
@{
    Layout = null;
}
@using 仓储UI.Models
@model AdmitModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Html.Partial("LayUICSS")
</head>
<body>
    <div>
        <form class="layui-form" action="/Login/Login" method="post">
            <div class="layui-form-item">
                <label class="layui-form-label">账号：</label>
                <div class="layui-input-inline">
                    <input type="text" name="title" required lay-verify="required" placeholder="请输入账号" autocomplete="off" class="layui-input">
                </div>
                <div class="layui-form-mid layui-word-aux">
                    @Html.ValidationMessageFor(x => x.UserName)
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">密码：</label>
                <div class="layui-input-inline">
                    <input type="password" name="PassWord" required lay-verify="required" placeholder="请输入密码" autocomplete="off" class="layui-input">
                </div>
                <div class="layui-form-mid layui-word-aux">
                    @Html.ValidationMessageFor(x => x.PassWord)
                </div>
            </div>
            <p>
                <button type="submit" class="layui-btn" lay-submit lay-filter="formDemo">登录</button>
                @Html.ValidationMessage("error")
            </p>
        </form>
    </div>
    @Html.Partial("LayUIJS")
</body>
</html>
