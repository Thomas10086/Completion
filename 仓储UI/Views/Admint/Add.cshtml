@using 仓储Model
@model Admin
<link href="~/Content/layui/css/layui.css" rel="stylesheet" />
<form class="layui-form" action="/Admint/AddAdmin" method="post">
    <div class="layui-form-item">
        <label class="layui-form-label">用户名编码</label>
        <div class="layui-input-block">
            <input type="text" name="title" required lay-verify="required" placeholder="请输入标题" autocomplete="off" class="layui-input" id="AdminId" name="AdminId">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">用户名</label>
        <div class="layui-input-block">
            <input type="text" name="title" required lay-verify="required" placeholder="请输入标题" autocomplete="off" class="layui-input" id="Admin" name="Admin">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">密码</label>
        <div class="layui-input-inline">
            <input type="password" name="password" required lay-verify="required" placeholder="请输入密码" autocomplete="off" class="layui-input" id="Password"name="Password">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">确认密码</label>
        <div class="layui-input-inline">
            <input type="password" name="password" required lay-verify="required" placeholder="请输入密码" autocomplete="off" class="layui-input" id="Password"name="Password">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">邮箱</label>
        <div class="layui-input-inline">
            <input type="password" name="password" required lay-verify="required" placeholder="请输入邮箱" autocomplete="off" class="layui-input" id="Email"name="Email">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">电话</label>
        <div class="layui-input-inline">
            <input type="password" name="password" required lay-verify="required" placeholder="请输入电话" autocomplete="off" class="layui-input" id="Phone"name="Phone">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">真名</label>
        <div class="layui-input-inline">
            <input type="password" name="password" required lay-verify="required" placeholder="请输入真名" autocomplete="off" class="layui-input" id="UserName"name="UserName">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">角色</label>
        <div class="form-group">
            <select name="city" lay-verify="" name="RoleName" id="RoleName">
                <option value="010">
                    @Html.DropDownList("RoleNum")
                </option>
            </select>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">部门</label>
        <div class="form-group">
            <select name="city" lay-verify="" id="sysDartName" name="sysDartName">
                @Html.DropDownList("DepartNum")
            </select>
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" lay-submit lay-filter="formDemo">保存</button>
        </div>
    </div>
</form>
<script src="~/Content/layui/layui.js"></script>
<script>
    $(function () {
        $(".layui-form").on("click", ".layui-btn", function () {
            var info = {
                UserCode:$("#AdminId").val(),
                UserName:$("#Admin").val(),
                ZName:$("#UserName").val(),
                PassWord:$("#Password").val(),
                PassWord:$("#Passwords").val(),
                RoleNum:$("#RoleName").val(),
                DepartNum:$("#sysDartName").val(),
                Email:$("#Email").val(),
                Phone:$("#Phone").val(),
            }
            var layer = layui.layer;
            $.ajax({
                type: "post",
                url: "/Admint/Add",
                data: JSON.stringify(info),
                contentType: "appliaction/json",
                success: function (data) {
                    layer.msg(data);
                    var index = parent.layer.getFrameIndex(window.name);
                    parent.layer.close(index);
                },
                error: function (excption) {
                    layer.msg("错误" + excption.responseText);
                }
            });
        })
        })
    </script>
                
